@using TASVideos.TagHelpers
@model DisplayMiniMovie

<div condition="Model.Movie is not null" class="clearfix">
	<div class="card minimovie">
		<div class="card-header bg-publication">
			<h5><span class="float-end badge bg-info">Featured</span></h5>
			<h4><pub-link id="Model.Movie!.Id" class="text-decoration-none"><span class="text-body-emphasis">@Model.Movie.Title</span></pub-link></h4>
		</div>
		<div class="card-body bg-publication-subtle">
			<pub-link id="Model.Movie.Id">
				<div class="float-start pe-3 pb-1" style="max-width: 80%">
					<img class="w-100 pixelart-image pb-1" src="~/media/@Model.Movie.Screenshot.Path" alt="@Model.Movie.Screenshot.Description" />
					<br />
					<a href="@Model.Movie.OnlineWatchingUrl" class="btn btn-primary" target="_blank"><i class="fa fa-external-link"></i> Watch</a>
				</div>
			</pub-link>
			@await Component.RenderWiki(LinkConstants.PublicationWikiPage + Model.Movie.Id)
		</div>
	</div>
</div>
