@model PlatformFramerates
<div class="table-container">
	<table class="table table-striped table-bordered">
		<tr>
			<th>@Html.DisplayNameFor(m => m.Framerates.First().SystemCode)</th>
			<th>@Html.DisplayNameFor(m => m.Framerates.First().RegionCode)</th>
			<th>@Html.DisplayNameFor(m => m.Framerates.First().FrameRate)</th>
			<th>@Html.DisplayNameFor(m => m.Framerates.First().Preliminary)</th>
		</tr>
		@foreach (var item in Model.Framerates)
		{
			<tr class="@(item.Preliminary ? "alert-warning" : "")">
				<td>@item.SystemCode</td>
				<td>@item.RegionCode</td>
				<td>@item.FrameRate</td>
				<td>@item.Preliminary.ToYesNo()</td>
			</tr>
		}
	</table>
</div>
