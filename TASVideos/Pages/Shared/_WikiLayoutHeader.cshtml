@using Microsoft.AspNetCore.Mvc.TagHelpers
@model TASVideos.Core.Services.Wiki.IWikiPage
@{
	bool canEdit = WikiHelper.UserCanEditWikiPage(Model.PageName, User.Name(), User.Permissions());
}

<top-button-bar condition="canEdit">
	<edit-button asp-page="/Wiki/Edit" asp-route-path="@Model.PageName" class="btn-sm"></edit-button>
</top-button-bar>

@if (Model.IsSystemPage())
{
	<info-alert>
		@await Html.RenderWiki(SystemWiki.IsSystemPage)
	</info-alert>
}
else if (Model.IsGameResourcesPage())
{
	<info-alert>
		@await Html.RenderWiki(SystemWiki.GameResourcesHeader)
	</info-alert>
}
else if (Model.IsHomePage())
{
	<partial name="_HomePageHeader" model="Model" />
}

<partial name="_ListLanguages" model="Model" />
