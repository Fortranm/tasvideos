@page
@model CreateModel
@{
	ViewData.SetTitle("Creating a new Genre");
}

<form client-side-validation="true" method="post">
	<row>
		<column lg="6">
			<label asp-for="Genre.DisplayName"></label>
			<input type="text" asp-for="Genre.DisplayName" class="form-control" />
			<span asp-validation-for="Genre.DisplayName"></span>
		</column>
	</row>
	<form-button-bar>
		<submit-button><i class="fa fa-save"></i> Create</submit-button>
		<cancel-link asp-page="Index"></cancel-link>
	</form-button-bar>
</form>
