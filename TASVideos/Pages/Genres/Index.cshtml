@page
@model IndexModel
@{
	ViewData.SetTitle("Genre List");
}
<top-button-bar>
	<add-button asp-page="Create" Permission="TagMaintenance"></add-button>
</top-button-bar>
<standard-table>
	<tr>
		<th>Display Name</th>
		<th>Game Count</th>
		<th></th>
	</tr>
	@foreach (var genre in Model.Genres.OrderBy(g => g.DisplayName))
	{
		<tr>
			<td>@genre.DisplayName</td>
			<td>
				<a asp-page="/Games/List" asp-route-Genre="@genre.DisplayName">@genre.GameCount</a>
			</td>
			<td>
				<edit-button asp-page="Edit" asp-route-id="@genre.Id"></edit-button>
			</td>
		</tr>
	}
</standard-table>