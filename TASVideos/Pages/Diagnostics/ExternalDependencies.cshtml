@page
@{ ViewData.SetTitle("External Dependencies"); }
@model ExternalDependenciesModel

@functions
{
	string ToIcon(bool? val)
	{
		return $"<i class=\"fa {ToIconClass(val)}\"></i>";
	}

	string ToIconClass(bool? val)
	{
		if (val == true)
		{
			return "text-success fa-check";
		}

		if (val == false)
		{
			return "text-danger fa-exclamation";
		}

		return "text-info fa-question";
	}
}
<ul>
	<li><a asp-page="Index">Diagnostics</a></li>
</ul>
<row>
	<column lg="6">
		<table class="table table-bordered table-striped">
			<tr>
				<th>Service</th>
				<th>Status</th>
			</tr>
			<tr>
				<td>YouTube Enabled</td>
				<td>
					@Html.Raw(ToIcon(Model.YoutubeEnabled))
				</td>
			</tr>
			<tr>
				<td>Youtube Access Successful</td>
				<td>
					@Html.Raw(ToIcon(Model.YoutubeAccessSuccessful))
				</td>
			</tr>
			<tr>
				<td>Email Enabled</td>
				<td>
					@Html.Raw(ToIcon(Model.EmailEnabled))
				</td>
			</tr>
			<tr>
				<td>Irc</td>
				<td>@Html.Raw(ToIcon(Model.IrcEnabled))</td>
			</tr>
			<tr>
				<td>Irc Secure Channel</td>
				<td>@Html.Raw(ToIcon(Model.SecureIrcEnabled))</td>
			</tr>
			<tr>
				<td>Discord</td>
				<td>@Html.Raw(ToIcon(Model.DiscordEnabled))</td>
			</tr>
			<tr>
				<td>Discord Private Channel</td>
				<td>@Html.Raw(ToIcon(Model.DiscordPrivateChannelEnabled))</td>
			</tr>
		</table>
	</column>
</row>
