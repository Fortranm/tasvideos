@page "/Games/{gameId}/Versions/List"
@model ListModel
@{
	ViewData.SetTitle($"Versions for {Model.GameDisplayName}");
}

<h4>Game: <a asp-page="/Games/Index" asp-route-id="@Model.GameId">@Model.GameDisplayName</a></h4>

<top-button-bar>
	<add-button asp-page="Edit" permission="CatalogMovies" asp-route-gameId="@Model.GameId"></add-button>
</top-button-bar>
<hr />
<standard-table>
	<tr>
		<th>Name</th>
		<th>Title Override</th>
		<th>Version</th>
		<th>Region</th>
		<th>Type</th>
		<th>MD5</th>
		<th>SHA1</th>
		<th>System</th>
		<th>Actions</th>
	</tr>
	@foreach (var version in Model.Versions.OrderBy(r => r.Name))
	{
		<tr>
			<td>@version.Name</td>
			<td>@version.TitleOverride</td>
			<td>@version.Version</td>
			<td>@version.Region</td>
			<td>@version.Type</td>
			<td>@version.Md5</td>
			<td>@version.Sha1</td>
			<td>@version.System</td>
			<td-action-column>
				<edit-button class="btn-sm" asp-page="Edit" permission="CatalogMovies" asp-route-id="@version.Id" asp-route-gameId="@Model.GameId"></edit-button>
			</td-action-column>
		</tr>
	}
</standard-table>

