@page
@model IndexModel
@{
	ViewData.SetTitle("Tag List");
}

<a class="btn btn-primary float-end mb-3" asp-page="Create"><i class="fa fa-plus"></i> Create</a>
<standard-table>
	<tr>
		<th>Code</th>
		<th>Display Name</th>
		<th></th>
	</tr>
	@foreach (var tag in Model.Tags.OrderBy(t => t.Code))
	{
		<tr>
			<td>@tag.Code</td>
			<td>@tag.DisplayName</td>
			<td>
				<a class="btn btn-primary" asp-page="Edit" asp-route-id="@tag.Id">
					<i class="fa fa-pencil"></i> Edit
				</a>
			</td>
		</tr>
	}
</standard-table>