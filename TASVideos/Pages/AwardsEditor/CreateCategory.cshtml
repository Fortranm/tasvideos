@page
@model CreateCategoryModel
@{
	ViewData.SetTitle("Create a New Award Category");
}

<form method="post" enctype="multipart/form-data">
	<div asp-validation-summary="All" class="text-danger"></div>
	<row>
		<column md="6">
			<fieldset>
				<label asp-for="Type"></label>
				<select asp-for="Type" asp-items="Model.AvailableAwardTypes" class="form-select"></select>
			</fieldset>
			<fieldset>
				<label asp-for="ShortName"></label>
				<input asp-for="ShortName" class="form-control"/>
				<span asp-validation-for="ShortName" class="text-danger"></span>
			</fieldset>
			<fieldset>
				<label asp-for="Description"></label>
				<input asp-for="Description" class="form-control"/>
				<span asp-validation-for="Description" class="text-danger"></span>
			</fieldset>
			<fieldset>
				<div><small>Note: filename will be auto-generated with the pattern {shortname}_xxxx.png</small></div>
				<label asp-for="BaseImage"></label>
				<input asp-for="BaseImage" class="form-control"/>
				<span asp-validation-for="BaseImage" class="text-danger"></span>
			</fieldset>
			<fieldset>
				<div><small>Unfortunately, we need the higher res images manually uploaded too, for now</small></div>
				<label asp-for="BaseImage2X"></label>
				<input asp-for="BaseImage2X" class="form-control"/>
				<span asp-validation-for="BaseImage2X" class="text-danger"></span>
			</fieldset>
			<fieldset>
				<div><small>Unfortunately, we need the higher res images manually uploaded too, for now</small></div>
				<label asp-for="BaseImage4X"></label>
				<input asp-for="BaseImage4X" class="form-control"/>
				<span asp-validation-for="BaseImage4X" class="text-danger"></span>
			</fieldset>
		</column>
	</row>
	<form-button-bar>
		<button type="submit" class="btn btn-primary"><i class="fa fa-plus"></i> Create</button>
		<a class="btn btn-secondary" asp-page="ListCategories">Cancel</a>
	</form-button-bar>
</form>