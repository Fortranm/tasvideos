@page "{year}"
@model UploadImageModel
@{
	ViewData.SetTitle($"Upload Award Image for Year {Model.Year}");
}

<form method="post" enctype="multipart/form-data">
	<row>
		<column md="6">
			<fieldset>
				<label asp-for="Award"></label>
				<select asp-for="Award" asp-items="Model.AvailableAwardCategories" class="form-select"></select>
				<span asp-validation-for="Award" class="text-danger"></span>
			</fieldset>
		</column>
		<column md="6">
			<partial name="_ImagePreview" model="@(Html.IdFor(m => m.Award), Model.Year)" />
		</column>
	</row>
	<row>
		<column md="6">
			<fieldset>
				<div><small>Note: filename will be auto-generated with the pattern {shortname}_@(Model.Year).png</small></div>
				<label asp-for="BaseImage"></label>
				<input asp-for="BaseImage" class="form-control"/>
				<span asp-validation-for="BaseImage" class="text-danger"></span>
			</fieldset>
			<fieldset>
				<div><small>Unfortunately, we need the higher res images manually uploaded too, for now</small></div>
				<label asp-for="BaseImage2X"></label>
				<input asp-for="BaseImage2X" class="form-control"/>
				<span asp-validation-for="BaseImage2X" class="text-danger"></span>
			</fieldset>
			<fieldset>
				<div><small>Unfortunately, we need the higher res images manually uploaded too, for now</small></div>
				<label asp-for="BaseImage4X"></label>
				<input asp-for="BaseImage4X" class="form-control"/>
				<span asp-validation-for="BaseImage4X" class="text-danger"></span>
			</fieldset>
		</column>
	</row>
	<form-button-bar>
		<submit-button><i class="fa fa-upload"></i> Upload</submit-button>
		<cancel-link asp-page="Index"></cancel-link>
	</form-button-bar>
</form>
