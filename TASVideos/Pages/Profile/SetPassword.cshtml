@page
@model SetPasswordModel
@{
	ViewData.SetTitle("Set password");
	ViewData.AddActivePage(ProfileNavPages.ChangePassword);
}
<h4>Set your password</h4>
<p class="text-info">
	You do not have a local username/password for this site. Add a local
	account, so you can log in without an external login.
</p>
<div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible" role="alert"></div>
<row>
	<div class="col-lg-6">
		<form method="post">
			<fieldset>
				<label asp-for="NewPassword"></label>
				<input asp-for="NewPassword" class="form-control" />
				<span asp-validation-for="NewPassword" class="text-danger"></span>
			</fieldset>
			<fieldset>
				<label asp-for="ConfirmPassword"></label>
				<input asp-for="ConfirmPassword" class="form-control" />
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</fieldset>
			<submit-button>Set password</submit-button>
		</form>
	</div>
</row>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
