@page
@model ChangePasswordModel
@{
	ViewData.SetTitle("Change password");
	ViewData.AddActivePage(ProfileNavPages.ChangePassword);
}
<row>
	<div class="col-md-6">
		<form method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			<input id="UserName" name="UserName" class="d-none" value="@User.Name()" autocomplete="username" />
			<fieldset>
				<label asp-for="OldPassword"></label>
				<input asp-for="OldPassword" class="form-control" autocomplete="current-password"  maxlength="524288" />
				<span asp-validation-for="OldPassword" class="text-danger"></span>
			</fieldset>
			<fieldset>
				<label asp-for="NewPassword"></label>
				<input asp-for="NewPassword" class="form-control" autocomplete="new-password"  maxlength="524288" />
				<span asp-validation-for="NewPassword" class="text-danger"></span>
			</fieldset>
			<fieldset>
				<label asp-for="ConfirmPassword"></label>
				<input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</fieldset>
			<submit-button>Update password</submit-button>
		</form>
	</div>
</row>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
