@page
@{
	ViewData.IgnorePageTitle();
	bool canEdit = WikiHelper.UserCanEditWikiPage(SystemWiki.FrontPage, User.Name(), User.Permissions());
}

<cache enabled="@(!User.IsLoggedIn())" expires-after="@TimeSpan.FromSeconds(Durations.FiveMinutesInSeconds)">
	@await Html.RenderWiki(SystemWiki.FrontPage)
</cache>
<edit-button condition="@canEdit"
   asp-page="/Wiki/Edit" asp-route-path="System/FrontPage" class="btn-sm">
</edit-button>