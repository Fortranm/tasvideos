@page "{id}/{handler?}"
@model EditModel
@{
	ViewData.SetTitle($"Editing PublicationClass: {Model.PublicationClass.Name}");
}

<top-button-bar>
	<delete-button condition="!Model.InUse"
				   asp-href="/PublicationClasses/Edit/@(Model.PublicationClass.Id)/Delete"
				   warning-message="Are you sure you want to remove this Publication Class?"></delete-button>
	<a class="btn btn-secondary" condition="Model.InUse" asp-page="/Publications/Index" asp-route-query="@Model.PublicationClass.Name">
		Publication Class in Use
	</a>
</top-button-bar>
<form method="post">
	<row>
		<column lg="6">
			<fieldset>
				<label asp-for="PublicationClass.Name"></label>
				<input asp-for="PublicationClass.Name" class="form-control" />
				<span asp-validation-for="PublicationClass.Name" class="text-danger"></span>
			</fieldset>
			<fieldset>
				<label asp-for="PublicationClass.Link"></label>
				<input asp-for="PublicationClass.Link" class="form-control" />
				<span asp-validation-for="PublicationClass.Link" class="text-danger"></span>
			</fieldset>
		</column>
		<column lg="6">
			<fieldset>
				<label asp-for="PublicationClass.Weight"></label>
				<input asp-for="PublicationClass.Weight" class="form-control" />
				<span asp-validation-for="PublicationClass.Weight" class="text-danger"></span>
			</fieldset>
			<fieldset>
				<label asp-for="PublicationClass.IconPath"></label>
				<input asp-for="PublicationClass.IconPath" class="form-control" />
				<span asp-validation-for="PublicationClass.IconPath" class="text-danger"></span>
			</fieldset>
		</column>
	</row>
	<form-button-bar>
		<submit-button></submit-button>
		<cancel-button asp-page="Index"></cancel-button>
	</form-button-bar>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}