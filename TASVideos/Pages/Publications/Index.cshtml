@page
@model IndexModel
@{
	ViewData.SetTitle($"Tool-assisted movies ({Model.Movies.RowCount})");
}

<a asp-page="Filter" asp-route-query="@Model.Query" class="btn btn-primary mb-2">Filter</a>
<fullrow class="mt-2">
	<partial name="_Pager" model="Model.Movies" />
</fullrow>
@foreach (var movie in Model.Movies)
{
	<partial name="_MovieModule" model="movie" />
	<br />
}
<fullrow class="mt-2">
	<partial name="_Pager" model="Model.Movies" />
</fullrow>
<div class="text-body-tertiary">
	@await Html.RenderWiki(SystemWiki.MovieLinkInstruction)
</div>