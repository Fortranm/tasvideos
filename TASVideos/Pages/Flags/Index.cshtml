@page
@model IndexModel
@{
	ViewData.SetTitle("Flag List");
}

<top-button-bar>
	<add-button asp-page="Create"></add-button>
</top-button-bar>
<standard-table>
	<tr>
		<th>Name</th>
		<th>Icon Path</th>
		<th>Link Path</th>
		<th>Token</th>
		<th>Permission Restriction</th>
		<th></th>
	</tr>
	@foreach (var flag in Model.Flags.OrderBy(f => f.Token))
	{
		<tr>
			<td>@flag.Name</td>
			<td>@flag.IconPath</td>
			<td>@flag.LinkPath</td>
			<td>@flag.Token</td>
			<td>@flag.PermissionRestriction</td>
			<td-action-column>
				<edit-button asp-page="Edit" asp-route-id="@flag.Id"></edit-button>
			</td-action-column>
		</tr>
	}
</standard-table>