@page
@model CreateModel
@{
	ViewData.SetTitle("Creating a new Game System");
}

<form method="post">
	<row>
		<column lg="6">
			<fieldset>
				<label asp-for="System.Id"></label>
				<input type="text" asp-for="System.Id" class="form-control"/>
				<span asp-validation-for="System.Id" class="text-danger"></span>
			</fieldset>
			<fieldset>
				<label asp-for="System.Code"></label>
				<input type="text" asp-for="System.Code" class="form-control"/>
				<span asp-validation-for="System.Code" class="text-danger"></span>
			</fieldset>
			<fieldset>
				<label asp-for="System.DisplayName"></label>
				<input type="text" asp-for="System.DisplayName" class="form-control"/>
				<span asp-validation-for="System.DisplayName" class="text-danger"></span>
			</fieldset>
		</column>
	</row>
	<form-button-bar>
		<submit-button class="btn btn-primary"><i class="fa fa-save"></i> Create</submit-button>
		<cancel-button asp-page="Index"></cancel-button>
	</form-button-bar>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
